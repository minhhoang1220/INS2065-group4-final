<div class="container mx-auto px-4" style="padding-top: 30px;">
  <div class="flex justify-center">
    <% if @random_profile %>
      <div class="shadow-md rounded-lg overflow-hidden relative" style="width: 1020.75px; height: 683.903px;">
        <div class="flex">
          <div style="width: 510.375px; height: 683.903px; overflow: hidden;">
            <% if @random_profile.image.attached? %>
              <%= image_tag(@random_profile.image, alt: @random_profile.name, style: "width: 100%; height: 100%; object-fit: cover; object-position: 100% 0;") %>
            <% else %>
              <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                <span>No Image</span>
              </div>
            <% end %>
          </div>

          <div class="p-4" style="width: 510.375px; display: flex; flex-direction: column; justify-content: center;">
            <h2 class="text-5xl font-bold capitalize" style="color: #454650; font-size: 40px; font-weight: 1000;">
              <%= @random_profile.name %>, <%= @random_profile.age || "N/A" %>
            </h2>
            <p class="text-lg font-semibold capitalize" style="color: #727484; font-size: 20px; font-weight: 500; padding-left: 20px;">
              <%= @random_profile.gender&.capitalize || "N/A" %>
            </p>
            <p class="mt-2 text-lg text-gray-800 capitalize" style="padding-left: 20px;"><%= @random_profile.bio %></p>
            <p class="mt-2 text-lg text-green-500 capitalize" style="padding-left: 20px;"><%= @random_profile.active ? "Active" : "Inactive" %></p>

            <div class="flex justify-center space-x-4 mt-8">
              <%= form_with(model: Swipe.new, url: like_or_dislike_swipes_path, local: true, class: "inline-block") do |f| %>
                <%= f.hidden_field :SwipedUserID, value: @random_profile.id %>
                
                <div class="flex space-x-4">
                  <%= f.button name: 'swipe[SwipeType]', value: 'dislike', class: "rounded-full p-4 bg-white hover:bg-gray-100 shadow-lg transition-all duration-200", style: "width: 60px; height: 60px;" do %>
                    <i class="fas fa-times text-red-500 text-2xl"></i>
                  <% end %>

                  <%= f.button name: 'swipe[SwipeType]', value: 'like', class: "rounded-full p-4 bg-white hover:bg-gray-100 shadow-lg transition-all duration-200", style: "width: 60px; height: 60px;" do %>
                    <i class="fas fa-heart text-green-500 text-2xl"></i>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <div class="bg-pastel-blue shadow-md rounded-lg overflow-hidden relative" style="width: 1020.75px; height: 683.903px;">
        <div class="flex items-center justify-center h-full">
          <div class="text-center">
            <i class="fas fa-search text-gray-400 text-6xl mb-4"></i>
            <h2 class="text-2xl font-bold text-gray-600">No more profiles to display</h2>
            <p class="text-gray-500 mt-2">Check back later for new matches!</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .bg-pastel-blue {
    background-color: #FFF7D8;
  }
</style>

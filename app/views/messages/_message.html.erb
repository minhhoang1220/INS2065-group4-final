<% if should_show_timestamp?(message) %>
<div class="message-time">
  <%= format_message_time(message.messageTimestamp) %>
</div>
<% end %>

<div class="message-group <%= message.senderID == current_user.usertable.id ? 'sent' : 'received' %>"
     data-sender-id="<%= message.senderID %>">
  <div class="message">
    <div class="message-content">
      <%= message.messageText %>
    </div>
  </div>
</div>

<style>
  .messages-container {
    flex: 1;
    overflow-y: auto;
    padding: 12px 24px;
    width: 100%;
    scrollbar-width: 2px;
    scrollbar-color: rgba(255, 255, 255, 0.3) transparent;
  }

  .messages-container::-webkit-scrollbar {
    width: 6px;
    height: 6px;
  }

  .messages-container::-webkit-scrollbar-track {
    background: transparent;
  }

  .messages-container::-webkit-scrollbar-thumb {
    background-color: rgba(255, 255, 255, 0.3);
    border-radius: 3px;
    transition: background-color 0.2s;
  }

  .messages-container::-webkit-scrollbar-thumb:hover {
    background-color: rgba(255, 255, 255, 0.5);
  }

  .message-group {
    display: flex;
    flex-direction: column;
    gap: 1px;
    margin: 1px 0;
    width: 100%;
  }

  .message {
    display: flex;
    flex-direction: column;
    max-width: 65%;
  }

  .sent {
    padding-left: 15%;
  }

  .received {
    padding-right: 15%;
  }

  .sent .message {
    align-self: flex-end;
  }

  .received .message {
    align-self: flex-start;
  }

  .message-content {
    padding: 8px 12px;
    border-radius: 18px;
    font-size: 14px;
    line-height: 1.4;
    word-wrap: break-word;
    max-width: fit-content;
  }

  .sent .message-content {
    background: white;
    color: #201D43;
    border-top-right-radius: 4px;
  }

  .received .message-content {
    background: #00B6FF;
    color: white;
    border-top-left-radius: 4px;
  }

  .message-time {
    position: relative;
    text-align: center;
    font-size: 12px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.9);
    margin: 8px auto;
    padding: 4px 12px;
    width: fit-content;
    user-select: none;
  }

  .message + .message {
    margin-top: 1px;
  }

  .message:last-child .message-content {
    border-radius: 18px;
  }
</style>

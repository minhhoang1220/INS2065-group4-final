<div id="sidebar" class="sidebar-container" data-controller="sidebar">
  <div class="sidebar-menu">
    <div class="nav-item brand" style="background-color: #ffffff;">
      <div class="nav-link" data-action="click->sidebar#toggle">
        <span class="nav-item__icon">
          <i class="fas fa-bars menu-icon"></i>
        </span>
        <span class="nav-item__text">Menu</span>
      </div>
      <div class="close-icon-wrapper" data-action="click->sidebar#close">
        <i class="fas fa-times close-icon"></i>
      </div>
    </div>
    
    <ul class="nav-list">
      <li class="nav-item">
        <%= link_to usertables_path do %>
          <span class="nav-item__icon">
            <i class="fas fa-user"></i>
          </span>
          <span class="nav-item__text">Profile</span>
        <% end %>
      </li>
      
      <li class="nav-item">
        <%= link_to swipes_path do %>
          <span class="nav-item__icon">
            <i class="fas fa-heart"></i>
          </span>
          <span class="nav-item__text">Swipe</span>
        <% end %>
      </li>
      
      <li class="nav-item">
        <%= link_to matches_path do %>
          <span class="nav-item__icon">
            <i class="fas fa-comments"></i>
          </span>
          <span class="nav-item__text">Matches</span>
        <% end %>
      </li>
      
      <li class="nav-item">
        <%= link_to messages_path do %>
          <span class="nav-item__icon">
            <i class="fas fa-envelope"></i>
          </span>
          <span class="nav-item__text">Messages</span>
        <% end %>
      </li>
      
      <li class="nav-item">
        <%= link_to memberships_path do %>
          <span class="nav-item__icon">
            <i class="fas fa-crown"></i>
          </span>
          <span class="nav-item__text">Membership</span>
        <% end %>
      </li>
    </ul>

    <ul class="nav-list bottom">
      <div class="divider"></div>
      <li class="nav-item">
        <%= link_to edit_user_registration_path do %>
          <span class="nav-item__icon">
            <i class="fas fa-cog"></i>
          </span>
          <span class="nav-item__text">Edit Account</span>
        <% end %>
      </li>
      <li class="nav-item">
        <%= button_to destroy_user_session_path, method: :delete do %>
          <span class="nav-item__icon">
            <i class="fas fa-sign-out-alt"></i>
          </span>
          <span class="nav-item__text">Logout</span>
        <% end %>
      </li>
    </ul>
  </div>
</div>

<style>
.sidebar-container {
  width: 4rem;
  height: calc(100vh - 70px);
  position: fixed;
  top: 70px;
  left: 0;
  background: white;
  transition: all 0.3s ease;
  overflow: hidden;
  z-index: 40;
  box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
}

.sidebar-container:hover:not(.closed):not(.transitioning),
.sidebar-container.expanded:not(.closed) {
  width: 12rem;
}

.sidebar-container.closed {
  transform: translateX(-100%);
  pointer-events: none;
}

.sidebar-container.transitioning {
  pointer-events: none;
}

.brand {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 60px;
  padding: 0;
}

.nav-link {
  padding: 1rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  width: 100%;
  color: #333;
}

.close-icon-wrapper {
  width: 3rem;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.2s;
}

.close-icon-wrapper:hover {
  background-color: #f5f5f5;
}

.sidebar-container.expanded .close-icon-wrapper {
  opacity: 1;
  visibility: visible;
}

.menu-icon,
.close-icon {
  font-size: 1.2rem;
}

.brand-text {
  display: none;
}

.sidebar-container:hover .brand-text,
.sidebar-container.expanded .brand-text {
  display: block;
}

.nav-list {
  list-style: none;
  padding: 0;
  margin: 0;
}

.nav-item {
  width: 100%;
}

.nav-item a, 
.nav-item button {
  padding: 1rem;
  display: flex;
  align-items: center;
  gap: 1rem;
  width: 100%;
  color: #333;
  transition: background-color 0.2s;
  cursor: pointer;
}

.nav-item:hover {
  background-color: #f5f5f5;
}

.nav-item__icon {
  min-width: 2rem;
  text-align: center;
}

.nav-item__text {
  display: none;
  white-space: nowrap;
}

.sidebar-container:hover .nav-item__text,
.sidebar-container.expanded .nav-item__text {
  display: block;
}

.bottom {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding-bottom: 1rem;
}

.menu-icon-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.menu-icon {
  font-size: 1.2rem;
}

.divider {
  height: 1px;
  background-color: #e5e5e5;
  margin: 0.5rem 0;
  width: 100%;
}

.sidebar-container.expanded {
  width: 12rem;
  box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
}

.sidebar-container:not(.expanded):not(:hover) .brand-text,
.sidebar-container:not(.expanded):not(:hover) .close-icon-wrapper {
  display: none;
}

.sidebar-container.expanded .nav-item__text,
.sidebar-container.expanded .brand-text,
.sidebar-container:hover .nav-item__text,
.sidebar-container:hover .brand-text {
  display: block;
}
</style>
<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Match</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to matches_path, class: button_class(theme: "transparent") do %>
      All Matches
      <% end %>
      <%= link_to edit_match_path(@match), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">User1id:</p>
        <p><%= @match.User1ID.name %></p>
      </li>
      <li>
        <p class="font-semibold">User2id:</p>
        <p><%= @match.User2ID.name %></p>
      </li>
      <li>
        <p class="font-semibold">Matchtimestamp:</p>
        <p><%= @match.MatchTimestamp %></p>
      </li>
  </ul>
</div>

<div class="container mx-auto px-4">
  <div class="flex items-center justify-between flex-wrap mb-6">
    <h1 class="text-3xl font-bold">Your Matches</h1>
  </div>

  <% if @matched_profiles.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% @matched_profiles.each do |profile| %>
        <div class="profile-card border p-4 rounded shadow-lg">
          <% if profile.image.attached? %>
            <div class="image-container mb-4">
              <%= image_tag(profile.image, alt: profile.name, class: "image-4-3 rounded") %>
            </div>
          <% else %>
            <p>No Image</p>
          <% end %>
          <h2 class="text-xl font-bold"><%= profile.name %>, <%= profile.age %></h2>
          <p class="text-gray-600"><%= profile.bio || "No bio available" %></p>
          <%= link_to "Start Chat", messages_path(receiver_id: profile.id), class: "btn btn-primary mt-4" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-8">
      <p class="text-gray-600">No matches yet. Keep swiping to find your match!</p>
    </div>
  <% end %>
</div>

<style>
  .profile-card {
    max-width: 400px;
    text-align: center;
    background-color: #1a1a1a;
    color: white;
  }

  .image-container {
    width: 100%;
    overflow: hidden;
    position: relative;
    padding-top: 75%;
  }

  .image-4-3 {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .btn-primary {
    background-color: #ff4081;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    text-decoration: none;
    display: inline-block;
  }
</style>

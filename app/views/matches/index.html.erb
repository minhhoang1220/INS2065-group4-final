


<div class="container mx-auto px-4">
  <div class="flex items-center justify-between flex-wrap mb-6">
    <h1 class="text-3xl font-bold">Matches</h1>

    <%= form_tag(matches_path, method: :get, class: "flex items-center gap-2 mb-4") do %>
      <%= text_field_tag :term, params[:term], placeholder: "Search matches", class: "border rounded p-2" %>
      <%= submit_tag 'Search', class: button_class(theme: "secondary") %>
    <% end %>

    <%= link_to new_match_path, class: button_class(theme: "primary") do %>
    Add New Match
    <% end %>
  </div>

  <table class="table-auto border-collapse border-slate-400 w-full">
    <thead class="bg-slate-50 dark:bg-slate-700">
      <tr>
        
                  <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">User1id</th>
                  <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">User2id</th>
                  <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left">Matchtimestamp</th>
                
          <th class="border border-slate-300 dark:border-slate-600 font-semibold p-4 text-slate-900 dark:text-slate-200 text-left"></th>
        
      </tr>
    </thead>

    <tbody>
      <% @matches.each do |match| %>
      <%= content_tag :tr, id: dom_id(match), class: dom_class(match) do %>
      

              <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= match.User1ID.name %></td>
              <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= match.User2ID.name %></td>
              <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= match.MatchTimestamp %></td>
      
      
        <td class="border border-slate-300 dark:border-slate-700 p-4 text-slate-500 dark:text-slate-400"><%= link_to 'Show', match %></td>
      
      <% end %>
      <% end %>
    </tbody>
  </table>
</div>
</div>
